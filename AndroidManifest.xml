<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="classes.example.drawingame"
    android:versionCode="1"
    android:versionName="1.1">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:label="@string/appName"
        android:theme="@style/AppTheme"
        android:icon="@drawable/ic_launcher_complete">
        <activity
            android:name=".activities.ChooseRoomActivity"
            android:label="@string/appName"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrawingActivity"
            android:label="@string/appName"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.TwitterActivity"
            android:label="@string/titleActivityTwitter"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>