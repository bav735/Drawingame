<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawingActivityTheme" parent="android:Theme.Holo.Light">
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Example2</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
    </style>
    <style name="DropDownListView.Example2" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_example</item>
    </style>
    <style name="PopupMenu.Example" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/dialog_room_create_iv_frame</item>
        <!--<item name="android:textColor">@color/white</item>-->
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.Holo.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.Holo.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>
