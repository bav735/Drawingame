<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoomActivityTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/RoomActivityActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/RoomActivityOverFlow</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Example1</item>
    </style>

    <style name="RoomActivityOverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@color/transparent</item>
        <item name="android:background">@drawable/room_activity_overflow_selector</item>
    </style>

    <style name="RoomActivityActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:icon">@drawable/app_icon_placeholder</item>
        <item name="android:background">@color/ui_color_background</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:padding">0px</item>
        <item name="android:layout_margin">0px</item>
    </style>

    <style name="MyButtontyle" parent="android:Widget.Button">
        <item name="android:padding">0px</item>
        <item name="android:layout_margin">0px</item>
    </style>

    <style name="MyImageButtontyle" parent="android:Widget.ImageButton">
        <item name="android:padding">0px</item>
        <item name="android:layout_margin">0px</item>
    </style>

    <style name="DropDownListView.Example1" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_example</item>
    </style>
</resources>