<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoomActivityTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/RoomActivityActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/RoomActivityOverFlow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.ExampleRA</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Example</item>
    </style>

    <style name="RoomActivityOverFlow" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@color/transparent</item>
        <item name="android:background">@drawable/room_activity_overflow_selector</item>
    </style>

    <style name="RoomActivityActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@drawable/room_activity_action_bar_underline</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="PopupMenu.ExampleRA" parent="android:Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/dialog_room_create_frame</item>
    </style>

    <style name="DropDownListView.Example" parent="android:Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_example</item>
    </style>
</resources>